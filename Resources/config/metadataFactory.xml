<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <parameters>
        <parameter key="kairos.cacheBundle.metadata_factory.class">Metadata\MetadataFactory</parameter>
        <parameter key="kairos.cacheBundle.metadata.annotation_driver.class">Snc\RedisBundle\Metadata\Driver\CacheableResultAnnotationDriver</parameter>
    </parameters>

    <services>
        <service id="matthias_annotation.metadata.annotation_driver" class="%kairos.cacheBundle.metadata.annotation_driver.class%" public="false">
            <argument type="service" id="annotation_reader" />
        </service>
        <service id="matthias_annotation.metadata_factory" class="%kairos.cacheBundle.metadata_factory.class%" public="false">
            <argument type="service" id="kairos.cacheBundle.metadata.annotation_driver" />
        </service>
    </services>
</container>